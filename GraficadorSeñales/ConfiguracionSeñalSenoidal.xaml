<UserControl x:Class="GraficadorSeñales.ConfiguracionSeñalSenoidal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GraficadorSeñales"
             mc:Ignorable="d" Height="149.5" Width="135.5">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="7,4,0,0" TextWrapping="Wrap" Text="Amplitud:" VerticalAlignment="Top" />
        <TextBox x:Name="txtAmplitud" HorizontalAlignment="Left" Height="23" Margin="7,25,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="120" />
        <TextBlock HorizontalAlignment="Left" Margin="7,53,0,0" TextWrapping="Wrap" Text="Fase:" VerticalAlignment="Top" />
        <TextBox x:Name="txtFase" HorizontalAlignment="Left" Height="22" Margin="7,69,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" />
        <TextBlock HorizontalAlignment="Left" Margin="7,96,0,0" TextWrapping="Wrap" Text="Frecuencia:" VerticalAlignment="Top"/>
        <TextBox x:Name="txtFrecuencia" HorizontalAlignment="Left" Height="23" Margin="7,117,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="120" />

    </Grid>
</UserControl>
